#!/bin/bash
PARENT_PATH=$( cd "$(dirname "${BASH_SOURCE[0]}")" ; pwd -P )

TYPE=$1
shift 1

if [ "$TYPE" == "integration" ] || [ -z "$TYPE" ]
then
    $PARENT_PATH/env dev exec event-dispatcher vendor/bin/behat $@
fi
if [ "$TYPE" == "unit" ] || [ -z "$TYPE" ]
then
    $PARENT_PATH/env dev exec event-dispatcher vendor/bin/phpunit $@ tests/unit
fi

